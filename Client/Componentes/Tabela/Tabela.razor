@inject NavigationManager NavigationManager


<div class="table__header--title">
    <h2 class="table__title">@tableTitle</h2>
    <div class="table__search">
        <span class="oi oi-magnifying-glass"></span>
        <input placeholder="Pesquisa" class="table__search--input" />
    </div>
</div>
<table class="table">
    <tr class="table__tr table__header">
        @foreach (string tableHeader in tableHeaders)
        {
            <th class="table__th">
                @tableHeader
            </th>
        }
        <th class="table__th">
            Ações
        </th>
    </tr>
    <tbody>
        <tr class="table__tr">
            @foreach (string data in tableData)
            {
                <td class="table__td">
                    @data
                </td>
            }
            <td class="table__td">
                <div>
                    <button type="button" class="button button--small button--edit" @onclick=@(() => NavigationManager.NavigateTo("InformacaoCliente"))>Editar</button>
                    <button type="button" class="button button--small button--delete">Deletar</button>
                </div>
            </td>
        </tr>
        <tr class="table__tr ">
            <td colspan=4 class="table__td ">
                <button class="button button--action" @onclick=@(() => NavigationManager.NavigateTo("CadastroCliente"))>
                    Adicionar Cliente
                </button>
            </td>
        </tr>
    </tbody>
</table>

@code {

    [Parameter] public string tableTitle { get; set; }

    [Parameter] public string[] tableData { get; set; }

    [Parameter] public string[] tableHeaders { get; set; }

    [Parameter] public string tableLink { get; set; }

}
