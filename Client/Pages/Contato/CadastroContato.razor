@page "/CadastroContato"
@page "/CadastroContato/{codContato}"
@using Projeto_Contabilidade.Client.Pages.Contato
@using Projeto_Contabilidade.Client.Componentes.Steper

<div class="card">
    <h4 class="card-header">Cadastro de Contato</h4>
    <div class="card-body">

        <EditForm Model="vmContato">
            <Steper>
                <Step Icon="oi-info" Text="Informações Gerais" Value="Step1" Enabled="IsEnabled">
                    <div class="form__div">
                        <h3 class="form__title">
                            Informações Gerais
                        </h3>
                        <div class="form__inputs">
                            <div class="field__control">
                                <label>Cliente</label>
                                <InputSelect class="field__input" @bind-Value="vmContato.Cod_Contato"></InputSelect>
                            </div>
                            <div class="field__control">
                                <label>Nome</label>
                                <InputText class="field__input field__input--active" @bind-Value="vmContato.Nome_Contato"></InputText>
                            </div>
                            <div class="field__control">
                                <label>Celular</label>
                                <InputText class="field__input field__input--active" @bind-Value="vmContato.Celular"></InputText>
                            </div>
                            <div class="field__control">
                                <label>E-mail</label>
                                <InputText class="field__input field__input--active" @bind-Value="vmContato.Email"></InputText>
                            </div>

                        </div>
                    </div>
                </Step>
            </Steper>
             <div class="form__buttons">
                <button class="button button--normal button--delete">
                    Excluir
                </button>
                <button  class="button button--normal button--action">
                    Limpar
                </button>
                @*@if (string.IsNullOrWhiteSpace(vmCliente.Cod_Cliente) == true)
                {
                    <button class="button button--normal button--action">
                        Gravar
                    </button>
                }
                else
                {
                    <button class="button button--normal button--action">
                        Editar
                    </button>
                }*@
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public string codContato { get; set; }
    ContatoViewModel vmContato = new ContatoViewModel();
    public bool IsEnabled = true;

}
