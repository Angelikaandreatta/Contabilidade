<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Projeto_Contabilidade</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="() => expandirSubMenuCliente = !expandirSubMenuCliente">
                <span class="oi oi-person" aria-hidden="true"></span> Cliente
            </NavLink>
        </li>
        @if (expandirSubMenuCliente)
        {
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="CadastroCliente">
                    <span class="oi oi-plus" aria-hidden="true"></span> Cadastrar
                </NavLink>
            </li>
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="TabelaCliente">
                    <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Pesquisa
                </NavLink>
            </li>
        }

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="() => expandirSubMenuContato = !expandirSubMenuContato">
                <span class="oi oi-phone" aria-hidden="true"></span> Contato
            </NavLink>
        </li>
        @if (expandirSubMenuContato)
        {
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="CadastroContato">
                    <span class="oi oi-plus" aria-hidden="true"></span> Cadastrar
                </NavLink>
            </li>
        }
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="() => expandirSubMenuFuncionario = !expandirSubMenuFuncionario">
                <span class="oi oi-people" aria-hidden="true"></span> Funcionário
            </NavLink>
        </li>
        @if (expandirSubMenuFuncionario)
        {
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="CadastroFuncionario">
                    <span class="oi oi-plus" aria-hidden="true"></span> Cadastrar
                </NavLink>
            </li>
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="TabelaFuncionario">
                    <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Pesquisa
                </NavLink>
            </li>
        }

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="() => expandirSubMenuPeriodico = !expandirSubMenuPeriodico">
                <span class="oi oi-document" aria-hidden="true"></span> Periódico
            </NavLink>
        </li>
        @if (expandirSubMenuPeriodico)
        {
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="CadastroPeriodico">
                    <span class="oi oi-plus" aria-hidden="true"></span> Cadastrar
                </NavLink>
            </li>
            <li class="nav-item pl-5">
                <NavLink class="nav-link nav-link--expand" href="TabelaPeriodico">
                    <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Pesquisa
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {

    private bool expandirSubMenuCliente;
    private bool expandirSubMenuContato;
    private bool expandirSubMenuFuncionario;
    private bool expandirSubMenuPeriodico;

    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
